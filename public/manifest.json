{
  "manifest_version": 3,
  "name": "chrome-assist",
  "version": "0.1.0",
  "description": "On Device Chrome Assistant powered by Gemini Nano",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/android-chrome-192x192.png",
    "128": "icons/android-chrome-512x512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "bookmarks",
    "sidePanel",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": ["https://*/*"],
  "commands": {
    "trigger-summarize": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Trigger the Summarize model"
    },
    "trigger-translate": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Trigger Translation"
    },
    "trigger-write": {
      "suggested_key": {
        "default": "Alt+Shift+W"
      },
      "description": "Trigger Writing"
    },
    "trigger-rewrite": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Trigger Rewriting"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "48": "icons/android-chrome-192x192.png",
      "128": "icons/android-chrome-512x512.png"
    }
  }
}